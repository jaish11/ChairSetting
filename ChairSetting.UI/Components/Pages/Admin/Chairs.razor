@page "/admin/chairs"

@using ChairSetting.UI.Models
@using ChairSetting.UI.Services
@inject ChairService ChairService
@inject IJSRuntime JS

<h3 class="mb-3">Manage Chairs</h3>

<div class="card shadow-sm mb-4">
    <div class="card-body d-flex gap-2">
        <input class="form-control"
               placeholder="Chair Number"
               @bind="chairNumber" />
        <button class="btn btn-primary" @onclick="Add">
            <i class="bi bi-plus-circle"></i> Add
        </button>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Chair</th>
            <th>Status</th>
            <th style="width:120px">Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var chair in chairs)
        {
            <tr>
                <td>@chair.ChairNumber</td>
                <td>
                    @if (chair.IsOccupied)
                    {
                        <span class="badge bg-danger">Occupied</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Available</span>
                    }
                </td>
                <td>
                    <button class="btn btn-sm btn-danger"
                            @onclick="() => ConfirmDelete(chair.Id)">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    string chairNumber;
    List<ChairResponseDto> chairs = new();

    protected override async Task OnInitializedAsync()
    {
        chairs = await ChairService.GetAll();
    }

    async Task Add()
    {
        if (string.IsNullOrWhiteSpace(chairNumber))
        {
            await JS.InvokeVoidAsync("showToast", "Chair number required", "warning");
            return;
        }

        await ChairService.Add(chairNumber);
        chairNumber = string.Empty;

        await JS.InvokeVoidAsync("showToast", "Chair added successfully", "success");
        chairs = await ChairService.GetAll();
    }

    async Task ConfirmDelete(int id)
    {
        var confirm = await JS.InvokeAsync<bool>("showConfirmDelete");

        if (!confirm)
            return;

        await ChairService.Delete(id);
        await JS.InvokeVoidAsync("showToast", "Chair deleted successfully", "success");
        chairs = await ChairService.GetAll();
    }
}
